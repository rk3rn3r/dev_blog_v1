<article class="post single">
    <header>
        <div class="title">
            <h2>{# <a href="{{ post.link }}"> #}{{ page.author.name }}</a></h2>
        </div>
    </header>
    <p>
        <img style="max-width: 35%; float: left; margin: 0.5em 1em 1em 0; clear: both;" src="{{ page.avatar | baseUrl }}"/>
        {{ page.content | raw }}
        <div style="clear: both;"></div>
    </p>
</article>