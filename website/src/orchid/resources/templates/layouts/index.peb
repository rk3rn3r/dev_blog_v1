{% extends 'layouts/layoutBase' %}

{% block bodyClass -%}
    {{ 'index' }}
{%- endblock %}

{%- block body -%}
    <!-- Main -->
    <div id="main">
        {% page %}

        {% include 'includes/pagination' %}
    </div>

    <!-- Sidebar -->
    <section id="sidebar">

        <!-- Intro -->
        <section id="intro">
            <a href="{{ homepageUrl() }}" class="logo"><img src="{{ site.about.avatar }}" alt="{{ site.about.siteName }}"/></a>
            <header>
                <h2>{{ site.about.siteName | raw }}</h2>
                <p>{{ site.about.subtitle }}</p>
            </header>
        </section>

        {% include 'includes/componentHolder' with {"componentHolder": theme.sidebar} %}

